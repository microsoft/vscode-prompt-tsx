{
	"exclude": ["build", "src/tracer"],
	"include": ["src"],
	"compilerOptions": {
		"module": "commonjs",
		"target": "ES2022",
		"outDir": "dist",
		"rootDir": "src",
		"strict": true,
		"jsx": "react",
		"jsxFactory": "vscpp",
		"declaration": true,
		"jsxFragmentFactory": "vscppf",
		"moduleResolution": "node",
		"types": ["node", "mocha"]
	}
}
